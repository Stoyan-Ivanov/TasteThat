<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.stoyanivanov.tastethat.ui.CombinationDetailsFragment">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:verticalScrollbarPosition="right">

        <com.stoyanivanov.tastethat.view_utils.CustomTextView
            android:id="@+id/ctv_combination_details_header"
            app:layout_widthPercent = "90%"
            app:layout_heightPercent = "12%"

            android:layout_centerHorizontal="true"
            app:layout_marginTopPercent = "3%"

            android:gravity="center"
            android:textColor="@color/black"
            />

        <ImageView
            android:id = "@+id/iv_top_left"
            app:layout_widthPercent = "45%"
            app:layout_heightPercent = "30%"

            android:layout_below="@+id/ctv_combination_details_header"
            android:layout_alignParentLeft = "true"
            android:layout_alignParentStart = "true"

            app:layout_marginLeftPercent = "3%"
            app:layout_marginStartPercent = "3%"
            app:layout_marginTopPercent = "2%"

            android:background = "@color/red"
            />

        <ImageView
            android:id = "@+id/iv_top_right"
            app:layout_widthPercent = "45%"
            app:layout_heightPercent = "30%"

            android:layout_below="@+id/ctv_combination_details_header"
            android:layout_alignParentRight = "true"
            android:layout_alignParentEnd = "true"

            app:layout_marginRightPercent = "3%"
            app:layout_marginEndPercent = "3%"
            app:layout_marginTopPercent = "2%"

            android:background = "@color/red"
            />


        <ImageView
            android:id = "@+id/iv_bottom_left"
            app:layout_widthPercent = "45%"
            app:layout_heightPercent = "30%"

            android:layout_below="@id/iv_top_left"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"

            app:layout_marginLeftPercent = "3%"
            app:layout_marginStartPercent = "3%"
            app:layout_marginTopPercent = "3%"

            android:background = "@color/red"
            />

        <ImageView
            android:id = "@+id/iv_bottom_right"
            app:layout_widthPercent = "45%"
            app:layout_heightPercent = "30%"

            android:layout_below="@id/iv_top_right"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            app:layout_marginRightPercent = "3%"
            app:layout_marginEndPercent = "3%"
            app:layout_marginTopPercent = "3%"

            android:background = "@color/red"
            />

        <com.stoyanivanov.tastethat.view_utils.CustomTextView
            android:id="@+id/ctv_combination_details_description_header"
            app:layout_widthPercent = "50%"
            app:layout_heightPercent = "8%"

            android:layout_below="@+id/iv_bottom_left"
            app:layout_marginLeftPercent = "3%"
            app:layout_marginStartPercent = "3%"
            app:layout_marginTopPercent = "2%"

            android:text="Description:"
            android:textColor="@color/black"
            android:gravity="center"
            />

        <com.stoyanivanov.tastethat.view_utils.CustomTextView
            android:id="@+id/ctv_combination_details_description"

            app:layout_widthPercent = "94%"
            app:layout_heightPercent = "30%"

            android:layout_below="@+id/ctv_combination_details_description_header"
            android:layout_centerHorizontal="true"

            app:layout_marginTopPercent = "3%"
            />

    </android.support.percent.PercentRelativeLayout>

</ScrollView>
