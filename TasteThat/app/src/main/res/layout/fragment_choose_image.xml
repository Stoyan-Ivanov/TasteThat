<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.ChooseImageFragment">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/image_selection_header"
        android:layout_width="match_parent"
        app:layout_heightPercent="12%">

        <com.stoyanivanov.tastethat.view_utils.custom_views.CustomTextView
            android:id="@+id/tv_image_selection_header"
            app:layout_heightPercent = "75%"
            app:layout_widthPercent = "80%"
            android:layout_centerInParent="true"
            android:gravity="center"/>

    </android.support.percent.PercentRelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_images"
        android:layout_below="@id/image_selection_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</android.support.percent.PercentRelativeLayout>

