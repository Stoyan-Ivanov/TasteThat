<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_edittext_holder"
        android:layout_width="match_parent"
        app:layout_heightPercent = "65%"
        >

        <EditText
            android:id="@+id/et_ingredient"
            app:layout_widthPercent = "70%"
            app:layout_heightPercent = "60%"

            android:layout_alignParentEnd="true"
            app:layout_marginRightPercent = "5%"
            android:layout_centerVertical="true"

            android:maxLines="1"
            android:inputType="text"
            android:gravity="center_vertical"
            />

        <com.stoyanivanov.tastethat.view_utils.CustomTextView
            android:id="@+id/ctv_et_counter"
            app:layout_widthPercent = "15%"
            app:layout_heightPercent = "50%"

            android:layout_toLeftOf="@+id/et_ingredient"
            android:layout_centerVertical="true"
            app:layout_marginRightPercent = "5%"
            />
    </android.support.percent.PercentRelativeLayout>

    <Button
        android:id="@+id/btn_add_new_et"
        app:layout_widthPercent = "40%"
        app:layout_heightPercent = "30%"

        android:layout_centerHorizontal="true"
        android:layout_below="@+id/prl_edittext_holder"
        android:text="new"
        />

</android.support.percent.PercentRelativeLayout>