<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:elevation="4dp">

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.stoyanivanov.tastethat.view_utils.custom_views.CustomTextView
                android:id="@+id/tv_add_combination_header"

                app:layout_widthPercent = "70%"
                android:layout_height = "match_parent"

                app:layout_marginTopPercent = "3%"
                android:layout_centerHorizontal="true"

                android:text="@string/add_combination_frag_header"
                android:lines="1"
                android:gravity="center"
                android:textColor="@color/white"
                />

            <ImageView
                android:id="@+id/btn_add_discard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_marginRightPercent="4%"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_cancel_search"
                />

        </android.support.percent.PercentRelativeLayout>
    </android.support.design.widget.AppBarLayout>

    <com.stoyanivanov.tastethat.view_utils.custom_views.CustomTextView
        android:id="@+id/ctv_ingredient_label"
        app:layout_widthPercent = "85%"
        app:layout_heightPercent = "10%"

        android:layout_marginTop="?attr/actionBarSize"
        android:layout_centerHorizontal="true"

        android:text="Enter the components"
        android:gravity="center"
        />

    <ScrollView
        android:id="@+id/scrollview_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ctv_ingredient_label"
        android:layout_above="@id/btn_add_combination">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_add_fields_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarAlwaysDrawVerticalTrack="true">

            <include
                android:id="@+id/view_first_ingredient"
                android:layout_width="wrap_content"
                android:layout_height="140dp"

                layout="@layout/add_field_inflatable" />

            <include
                android:id="@+id/view_second_ingredient"
                android:layout_width="wrap_content"
                android:layout_height="140dp"

                layout="@layout/add_field_inflatable" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_add_combination"
        app:layout_widthPercent = "70%"
        app:layout_heightPercent = "10%"

        android:layout_alignParentBottom="true"
        app:layout_marginBottomPercent = "10%"
        android:layout_centerHorizontal="true"

        android:text="Add Combination"
        android:textColor="@color/white"
        android:background="@drawable/custom_button_shape"
        />
</android.support.percent.PercentRelativeLayout>