<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_achievement"
            app:layout_heightPercent="70%"
            app:layout_widthPercent="25%"

            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="15%"
            />

        <com.stoyanivanov.tastethat.view_utils.custom_views.CustomTextView
            android:id="@+id/tv_achievement_name"
            app:layout_heightPercent="80%"
            app:layout_widthPercent="60%"

            app:layout_marginLeftPercent="35%"
            app:layout_marginTopPercent="10%"

            android:gravity="center"
            />

        <View
            app:layout_heightPercent="2%"
            app:layout_widthPercent="90%"
            android:layout_below="@+id/tv_achievement_name"

            app:layout_marginTopPercent="2%"
            android:layout_centerHorizontal="true"

            android:background="@color/aluminum"
            />

</android.support.percent.PercentRelativeLayout>