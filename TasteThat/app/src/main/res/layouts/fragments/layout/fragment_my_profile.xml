<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.MyProfileFragment">

     <android.support.percent.PercentRelativeLayout
         android:id="@+id/prl_profile_pic"
         app:layout_heightPercent="40%"
         android:layout_width="match_parent"
         android:background="@drawable/custom_background_of_profile_pic"
         android:alpha="50"
         >

         <de.hdodenhof.circleimageview.CircleImageView
             android:id="@+id/iv_profile_picture"
             app:layout_heightPercent="70%"
             app:layout_widthPercent="50%"

             app:layout_marginLeftPercent="25%"
             app:layout_marginTopPercent="15%"
             />
     </android.support.percent.PercentRelativeLayout>

    <com.stoyanivanov.tastethat.view_utils.custom_views.CustomTextView
        android:id="@+id/tv_username"
        app:layout_heightPercent="9%"
        app:layout_widthPercent="70%"

        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="0%"
        android:layout_below="@id/prl_profile_pic"

        android:gravity="center"
        />

    <View
        android:id="@+id/divider_user_profile"
        android:layout_height="1dp"
        app:layout_widthPercent="30%"

        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_username"
        android:background="@color/aluminum"
        />

    <Button
        android:id="@+id/btn_liked_combinations"
        app:layout_heightPercent="9%"
        app:layout_widthPercent="70%"

        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="1%"
        android:layout_below="@id/tv_username"

        android:text="Liked"
        android:textColor="@color/white"
        android:background="@drawable/custom_button_shape"
        />

    <Button
        android:id="@+id/btn_uploaded_combinations"
        app:layout_heightPercent="9%"
        app:layout_widthPercent="70%"

        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="1%"
        android:layout_below="@id/btn_liked_combinations"

        android:text="Uploaded"
        android:textColor="@color/white"
        android:background="@drawable/custom_button_shape"
        />

    <Button
        android:id="@+id/btn_achievements"
        app:layout_heightPercent="9%"
        app:layout_widthPercent="70%"

        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="1%"
        android:layout_below="@id/btn_uploaded_combinations"

        android:text="Achievements"
        android:textColor="@color/white"
        android:background="@drawable/custom_button_shape"
        />

    <Button
        android:id="@+id/btn_logout"
        app:layout_widthPercent = "70%"
        app:layout_heightPercent = "9%"

        app:layout_marginTopPercent = "1%"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_achievements"

        android:text="Logout"
        android:textColor="#FAF448"
        android:background="@drawable/custom_button_shape"
        />



</android.support.percent.PercentRelativeLayout>
