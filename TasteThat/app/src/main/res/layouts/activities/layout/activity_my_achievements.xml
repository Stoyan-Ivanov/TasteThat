<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/ab_my_achievements_header"
        app:layout_heightPercent = "15%"
        android:layout_width="match_parent"

        android:background="@color/white"
        android:elevation="4dp">

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_achievements_profile_picture"
                app:layout_heightPercent="70%"
                app:layout_widthPercent="20%"

                app:layout_marginLeftPercent="5%"
                app:layout_marginTopPercent="15%"
                />

            <com.stoyanivanov.tastethat.view_utils.custom_views.CustomTextView
                android:id="@+id/ctv_achievements_username"
                app:layout_heightPercent="80%"
                app:layout_widthPercent="70%"

                app:layout_marginLeftPercent="2%"
                app:layout_marginTopPercent="10%"

                android:layout_toRightOf="@+id/iv_achievements_profile_picture"

                android:gravity="center"
                />
        </android.support.percent.PercentRelativeLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_achievements"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"

        android:layout_below="@+id/ab_my_achievements_header"
    />

    <include layout="@layout/bottom_navigation"/>

</android.support.percent.PercentRelativeLayout>
